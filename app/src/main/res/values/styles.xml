<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- List -->
    <style name="TextAppearance.PilotName.List" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/pilot_name_list</item>
    </style>

    <style name="TextAppearance.Itinerary.List" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/pilot_itinerary_list</item>
    </style>

    <!-- Details -->
    <style name="TextAppearance.PilotName.Details" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/pilot_name_list</item>
    </style>
    <style name="TextAppearance.Label.Details" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/details_label</item>
    </style>
    <style name="TextAppearance.Value.Details" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/details_value</item>
    </style>
    <style name="TextAppearance.Time.Details" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/details_time</item>
    </style>
    <style name="TextAppearance.Rating.EmptyState.Details" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/details_label</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
